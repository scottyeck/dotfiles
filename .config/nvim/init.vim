" Line numbers
set relativenumber
set nu

" Tabs
" (May wish to set this to be file-dependent)
set tabstop=4 softtabstop=4
set shiftwidth=4
set expandtab
set smartindent

" Disable swap
set noswapfile

" Search
set incsearch
set nohlsearch

set signcolumn=yes

" Ignores
set wildignore+=**/.git/*
set wildignore+=**/node_modules/*
